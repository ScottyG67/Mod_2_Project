<h2>New Event</h2>

<%= form_for @event do |f|%>
    <p><%= f.label :"Title:" %>
    <%= f.text_field :title %></p>
    <p><%= f.label :"Description:" %>
    <%= f.text_area :description %></p>
    <p><%= f.label :"Date and time:" %>
    <%= f.datetime_select :time%></p>
    <p><%= f.label :"Venue:" %>
    <%= collection_select :event, :venue_id, Venue.all, :id, :name, prompt:true %></p>

    <p><%= f.label :"Caterer:" %>
    <%= collection_select :event, :caterer_id, Caterer.all, :id, :name, prompt:true %></p>
    
    <%= f.submit %>
<%end%>