<div class="error">
<% if event.errors.any? %>
    <% event.errors.full_messages.each do |message|%>
        <h4><%= message %> </h4>
    <%end%>
<%end%>
</div>
<div class ="edit_form">
    <%= form_for event do |f|%>
        <p><%= f.label :"Title:" %>
        <%= f.text_field :title %></p>
        <p><%= f.label :"Description:" %>
        <%= f.text_area :description %></p>
        <p><%= f.label :"Date and time:" %>
        <%= f.datetime_select :time%></p>

        <p><%= f.label :"Venue:" %>
        <%= f.collection_select :venue_id, Venue.all, :id, :name, prompt:true %></p>

        <p><%= f.label :"Caterer:" %>
        <%= f.collection_select :caterer_id, Caterer.all, :id, :name, prompt:true %></p>

        <p><%= f.label :"Host:" %>
        <%= f.collection_select :host, User.all, :id, :name, prompt:true %>
        
        <%= f.submit %>
    <%end%><br>
</div>