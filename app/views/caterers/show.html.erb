<h2><%= @caterer.name %></h2>

<div>
    
    <strong>Description:</strong>
    <p><%= @caterer.description  %></p>
    <p><strong>Type of Food:</strong>
    <%= @caterer.food_type %></p>
    <p><strong>Cost per head:</strong>
    <%= @caterer.cost_per_head %></p>

</div>

<div>

<table style="width:50%">
  <caption>Upcoming Events</caption>
  <tr>
    <th>Event</th>
    <th>Date</th>
    <th>Location</th>
    <th>Expected Attendance</th>
  </tr>
  <% @caterer.events.each do |event| %>
  <tr>
    <td><%=link_to event.title, event_path(event.id)%></td>
    <td><%=event.time%></td>
    <td><%=event.venue.name%></td>
    <td>event.attenedance</td>
  </tr>
  <%end%>
</table>

</div> <br>

<div>
<strong> Past Events </strong>
<table style="width:50%">
  <tr>
    <th>Event</th>
    <th>Date</th>
    <th>Location</th>
    <th>Expected Attendance</th>
  </tr>
  
  <tr>
    <td>event.title</td>
    <td>event.date</td>
    <td>event.location</td>
    <td>event.attenedance</td>
  </tr>
</table>

</div> <br>


<%= button_to 'Edit Caterer', edit_caterer_path, :method => "get" %><br>







